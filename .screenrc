# Important key configurations

attrcolor b ".I"
defbce on
defutf8 on
startup_message off

defscrollback 10000

vbell off

activity "Activity in window %n (%t)"
bell_msg "Bell in window %n (%t)"

backtick 1 5 5 uptime
backtick 2 10 10 date +%m/%d
backtick 3 1 1 date +%H:%M:%S

# show screen version for a second
#msgwait 1
#version
# standard message delay is 2 seconds
msgwait 2

# Use alternate screen
altscreen on

# Status Lines
hardstatus alwayslastline
hardstatus string "%{=b KY} %{=b KY}%-Lw%{=r}%20>%n %t%{= KY}%+Lw %{= KY} %2` %3`"
caption string '%?%F%{=b KW} ***%:%{.Kw}    %? %t'
